{
  "name": "Opsgenie Alert Notifier",
  "version": "1.1.1",
  "description": "An extension for showing latest alerts and getting notifications for new alert(s) via polling Opsgenieâ€™s REST API.",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Opsgenie Alert Notifier",
    "default_popup": "popup.html"
  },
  "permissions": [
    "*://*.opsgenie.com/*",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "notifications"
  ],
  "options_page": "options.html",
  "icons": {
    "16": "images/16x16.png",
    "32": "images/32x32.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  },
  "manifest_version": 2
}
